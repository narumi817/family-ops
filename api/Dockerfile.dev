# syntax=docker/dockerfile:1

# 開発環境用のDockerfile
# Make sure RUBY_VERSION matches the Ruby version in .ruby-version
ARG RUBY_VERSION=3.2.6
FROM docker.io/library/ruby:$RUBY_VERSION-slim

# Rails app lives here
WORKDIR /rails

# Install base packages
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    curl \
    build-essential \
    git \
    libpq-dev \
    pkg-config \
    postgresql-client \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Install bundler
RUN gem install bundler

# Set development environment
ENV RAILS_ENV=development \
    BUNDLE_PATH=/usr/local/bundle

# Copy Gemfile and Gemfile.lock
COPY Gemfile Gemfile.lock ./

# Install gems
RUN bundle install

# Copy application code
COPY . .

# Create .bashrc with Rails console aliases for interactive shells
RUN echo '# Rails aliases' >> ~/.bashrc && \
    echo 'alias rails="bundle exec rails"' >> ~/.bashrc && \
    echo 'alias rails-c="bundle exec rails console"' >> ~/.bashrc && \
    echo 'alias rails-c="bundle exec rails c"' >> ~/.bashrc && \
    echo '# Rails aliases' >> /root/.bashrc && \
    echo 'alias rails="bundle exec rails"' >> /root/.bashrc && \
    echo 'alias rails-c="bundle exec rails console"' >> /root/.bashrc && \
    echo 'alias rails-c="bundle exec rails c"' >> /root/.bashrc

# Expose port 3000
EXPOSE 3000

# Default command (can be overridden in docker-compose.yml)
CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0"]

